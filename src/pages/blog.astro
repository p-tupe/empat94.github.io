---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro'
const allPosts = (await getCollection("blog")).sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
// const uniqueTags = [...new Set(allPosts.flatMap(p => p.data.tags))]
const pageTitle = "Posts Archive";
---
<BaseLayout pageTitle={pageTitle}>
  <ul>
    {allPosts.map((post) => <li><a href={`/posts/${post.id}`}>{post.data.title}</a></li>)}
  </ul>
</BaseLayout>
